{
  "manifest_version": 2,

  "name": "Wayfair Extension",
  "description": "This extension will help to simplifiy wayfair order processing.",
  "version": "1.0",

  "background": 
	  {
	  	"scripts": ["thirdParty/jquery-3.2.1.min.js",
	  				"js/background.js",
	  				"thirdParty/bootstrap-3.3.7-dist/js/bootstrap.min.js"]
	  },

  "content_scripts": 
	  [
	  	{
	  		"matches": ["<all_urls>"],
	  		"js":["js/popup.js"]
	  	}
	  	// ,
	  	// {
	  	// 	"matches": ["<all_urls>"],
	  	// 	"js":["js/content.js"]
	  	// }
	  	, 
	  	{
	  		"matches" : ["*://*.partners.wayfair.com/*"],
	  		"js":["productSpec/productSpecSheet.json"]
	  	}
	  ],


  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },
  "permissions": [
   "activeTab"
   ]
}