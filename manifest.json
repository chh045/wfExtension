{
	"manifest_version": 2,

	"name": "Wayfair Extension",
	"description": "This extension will help to simplifiy wayfair order processing.",
	"version": "2.0",
	"background":
	{
		"scripts":[
			"lib/jquery-3.2.1.min.js",
			"js/background.js"
		]
	},
	"content_scripts": 
	[
		{
			"matches" : ["*://*.partners.wayfair.com/*"],
			"js":[
				"lib/jquery-3.2.1.min.js",
				"js/content.js"
				// ,"lib/bootstrap-3.3.7-dist/js/bootstrap.min.js"
			],
			"css": [
				// "lib/bootstrap-3.3.7-dist/css/bootstrap.css",
				"css/content.css"
			]
		},
		{
			"matches": ["*://*.developer.chrome.com/*"],
			"js":[
				"lib/jquery-3.2.1.min.js",
				"js/content.js"
			]
		}
	],
	"browser_action": 
	{
		"default_icon": "img/icon.png",
		"default_popup": "html/popup.html"
	},
	"permissions": [
		"tabs", 
		"<all_urls>"
	]
}